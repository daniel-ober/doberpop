<h1>Admin: Recipes</h1>
<p><a href="/admin">‚Üê Back</a></p>

<div id="status" style="margin: 10px 0; color: #b00;"></div>

<table border="1" cellpadding="8" cellspacing="0" style="border-collapse: collapse; width: 100%;">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Created</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody id="recipesBody"></tbody>
</table>

<script>
  const statusEl = document.getElementById("status");
  const tbody = document.getElementById("recipesBody");

  function token() {
    return localStorage.getItem("token");
  }

  async function api(path, opts = {}) {
    const t = token();
    if (!t) {
      statusEl.textContent = "No token found. Log in first (you need a JWT in localStorage).";
      throw new Error("Missing token");
    }
    const res = await fetch(path, {
      ...opts,
      headers: {
        ...(opts.headers || {}),
        Authorization: `Bearer ${t}`,
        "Content-Type": "application/json"
      }
    });

    if (res.status === 401 || res.status === 403) {
      const data = await res.json().catch(() => ({}));
      statusEl.textContent = data.errors || "Unauthorized/Forbidden. Token invalid/expired or not admin.";
      throw new Error(statusEl.textContent);
    }

    return res;
  }

  function render(recipes) {
    tbody.innerHTML = "";
    recipes.forEach(r => {
      const tr = document.createElement("tr");
      tr.innerHTML = `
        <td>${r.id}</td>
        <td>${r.title || r.name || "(untitled)"}</td>
        <td>${r.created_at ? new Date(r.created_at).toLocaleString() : ""}</td>
        <td>
          <button data-id="${r.id}" class="delBtn">Delete</button>
        </td>
      `;
      tbody.appendChild(tr);
    });

    document.querySelectorAll(".delBtn").forEach(btn => {
      btn.addEventListener("click", async () => {
        const id = btn.getAttribute("data-id");
        if (!confirm(`Delete recipe #${id}? This cannot be undone.`)) return;
        await api(`/api/admin/recipes/${id}`, { method: "DELETE" });
        await load();
      });
    });
  }

  async function load() {
    statusEl.textContent = "";
    const res = await api("/api/admin/recipes");
    const recipes = await res.json();
    render(recipes);
  }

  load().catch(() => {});
</script>